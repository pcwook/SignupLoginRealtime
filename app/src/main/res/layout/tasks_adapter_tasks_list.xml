<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:paddingHorizontal="30dp"
    android:background="@drawable/theme_tasks_tasks_background">

    <TextView
        android:id="@+id/tasksContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="수입 40’ 여주 16:00 18톤 MSC 신항 의왕 정리 뒤작업뒤작업뒤작업" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/tasksContent">

        <Button
            android:id="@+id/tasksSelect"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_marginRight="20dp"
            android:paddingVertical="4dp"
            android:background="@drawable/theme_tasks_button_background"
            android:textSize="16dp"
            android:text="주세요"/>

        <Button
            android:id="@+id/tasksMove"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_marginLeft="20dp"
            android:paddingVertical="4dp"
            android:background="@drawable/theme_tasks_button_background"
            android:textSize="16dp"
            android:text="이동" />

    </LinearLayout>

</RelativeLayout>